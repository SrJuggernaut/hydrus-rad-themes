{# 

1 - App background
2 - Subtle background
3 - UI element background
4 - Hovered UI element background
5 - Active / Selected UI element background
6 - Subtle borders and separators
7 - UI element border and focus rings
8 - Hovered UI element border
9 - Solid backgrounds
10 - Hovered solid backgrounds
11 - Low-contrast text
12 - High-contrast text
#}

/* Main Component, almost everything inherits from here */

QWidget {
  font-family: {% for font in fonts %}"{{font}}", {% endfor %};
  font-size: {{fontSize}}px;
  color: {{neutral.neutral12}};
  background-color: {{neutral.neutral1}};
  /* In lists when color is alternative for legibility */
  alternate-background-color: {{neutral.neutral2}};
}

QWidget::disabled {
  color: {{neutral.neutral11}};
  border-color: {{neutral.neutral6}};
}

QWidget::item:selected {
background-color: {{primary.primary5}};
}

QWidget::item:hover {
  background-color: {{primary.primary4}};
}

QWidget#HydrusAnimationBar {
  qproperty-hab_border: {{neutral.neutral7}};
  qproperty-hab_background: {{neutral.neutral9}};
  qproperty-hab_nub: {{neutral.neutral3}};
}


/* QFrame, almost everything is inside a frame */

QFrame {
  padding: 0px;
  margin: 0px;
  border-width: 0px;
  border-color: {{neutral.neutral7}};
}

/* Menu Bar (QMenuBar) & Context Menu (QMenu) */

QMenuBar, QMenu {
  color: {{primary.primary12}};
  background-color: {{primary.primary2}};
  font-size: {{fontSize * 0.875}}px;
}

QMenuBar::item, QMenu::item {
  background: transparent;
}

QMenuBar::item:selected, QMenu::item:selected {
  color: {{primary.primary12}};
  background-color: {{primary.primary5}};
}

QMenuBar::item:disabled, QMenu::item:disabled {
  color: {{primary.primary11}};
}

QMenuBar::separator, QMenu::separator {
  height: 1px;
  background-color: {{primary.primary7}};
}

/* Tables */

QAbstractItemView {
  color: {{neutral.neutral12}};
  background: {{primary.primary2}};
  alternate-background-color: {{primary.primary3}};
}

QAbstractItemView::item:selected {
  color: {{primary.primary12}};
  background-color: {{primary.primary5}};
}

/* Table headers. */

QHeaderView::section {
  background-color: {{primary.primary3}};
  font-weight: bold;
}

QHeaderView::section:hover {
  background-color: {{primary.primary4}};
}

QHeaderView::section:selected {
  background-color: {{primary.primary5}};
}

/* ComboBox - Drop-down button field. The pop-up menu is a separate list object. */

QComboBox {
  /* Undocumented property! combobox-popup: [boolean] */
  /* Which style of popup list to use. Fusion defaults to 1. */
  /* Disabled due to buggy behavior. */
  combobox-popup: 0;

  color: {{primary.primary9}};
  background-color: {{primary.primary3}};
  border: 1px solid {{primary.primary7}};
  border-radius: 4px;
  padding: 4px 8px 4px 8px;
  overflow: hidden;

  font-weight: bold;
}

QComboBox:hover {
  background-color: {{primary.primary4}};
  border-color: {{primary.primary8}};
}

QComboBox:on {
  background-color: {{primary.primary5}};
  border-color: {{primary.primary8}};
}

QComboBox:disabled {
  color: {{neutral.neutral3}};
  background-color:{{neutral.neutral2}};
  border-color: {{neutral.neutral3}};
}

QComboBox::drop-down {
  color: {{primary.primary9}};
  background-color: {{primary.primary3}};
  border: 0px solid transparent;
  border-top-right-radius: 4px;
  border-bottom-right-radius: 4px;
  padding: 4px 4px 4px 4px;
}

QComboBox::drop-down:hover {
  background-color: {{primary.primary4}};
  border-color: {{primary.primary8}};
}

QComboBox::drop-down:on {
  background-color: {{primary.primary5}};
  border-color: {{primary.primary8}};
}

QComboBox::drop-down:disabled {
  color: {{neutral.neutral3}};
  background-color:{{neutral.neutral2}};
  border-color: {{neutral.neutral3}};
}

QComboBox::down-arrow {
  image: url("static/qss/resources/chevron-down.svg");
  width: 8px;
  height: 8px;
}

/* Buttons */

QPushButton {
  color: {{primary.primary9}};
  background-color: {{primary.primary3}};
  border: 1px solid {{primary.primary7}};

  border-radius: 4px;
  padding: 4px 8px 4px 8px;

  font-weight: bold;
}

QPushButton:hover {
  background-color: {{primary.primary4}};
  border-color: {{primary.primary8}};
}

QPushButton:pressed {
  background-color: {{primary.primary5}};
  border-color: {{primary.primary8}};
}

QPushButton:disabled {
  color: {{neutral.neutral3}};
  background-color:{{neutral.neutral2}};
  border-color: {{neutral.neutral3}};
}

QPushButton#HydrusAccept {
  color: {{green.green1}};
  background-color: {{green.green9}};
  border-color: {{green.green7}};
}

QPushButton#HydrusAccept:hover {
  background-color: {{green.green10}};
  border-color: {{green.green8}};
}

QPushButton#HydrusAccept:pressed {
  background-color: {{green.green10}};
  border-color: {{green.green8}};
}

QPushButton#HydrusCancel {
  color: {{red.red1}};
  background-color: {{red.red9}};
  border-color: {{red.red7}};
}

QPushButton#HydrusCancel:hover {
  background-color: {{red.red10}};
  border-color: {{red.red8}};
}

QPushButton#HydrusCancel:pressed {
  background-color: {{red.red10}};
  border-color: {{red.red8}};
}

QPushButton#HydrusOnOffButton[hydrus_on=true] {
  color: {{primary.primary1}};
  background-color: {{primary.primary9}};
  border-color: {{primary.primary7}};
}

QPushButton#HydrusOnOffButton[hydrus_on=true]:hover {
  color: {{primary.primary1}};
  background-color: {{primary.primary10}};
  border-color: {{primary.primary8}};
}

QPushButton#HydrusOnOffButton[hydrus_on=true]:pressed {
  color: {{primary.primary1}};
  background-color: {{primary.primary10}};
  border-color: {{primary.primary8}};
  
}

QPushButton#HydrusOnOffButton[hydrus_on=false] {
  color: {{primary.primary9}};
  background-color: {{primary.primary1}};
  border-color: {{primary.primary7}};
}

QPushButton#HydrusOnOffButton[hydrus_on=false]:hover {
  color: {{primary.primary9}};
  background-color: {{primary.primary2}};
  border-color: {{primary.primary8}};
  
}

QPushButton#HydrusOnOffButton[hydrus_on=false]:pressed {
  color: {{primary.primary9}};
  background-color: {{primary.primary2}};
  border-color: {{primary.primary8}};
}


/* CheckBox */

QCheckBox {
  color: {{neutral.neutral12}};
  background: transparent;
  spacing: 5px;
}

QCheckBox::indicator {
  width: {{fontSize}}px;
  height: {{fontSize}}px;
  border: 1px solid {{primary.primary7}};
  background-color: {{neutral.neutral3}};
}

QCheckBox::indicator:hover {
  background-color: {{neutral.neutral4}};
  border-color: {{primary.primary8}};
}

QCheckBox::indicator:disabled {
  background-color: transparent;
  border-color: {{neutral.neutral6}};
}

QCheckBox::indicator:checked {
  background-color: {{neutral.neutral5}};
  image: url("static/qss/resources/check.svg");
  border-color: {{primary.primary8}};
}

QCheckBox#HydrusWarning {
  color: {{red.red9}};
  background: transparent;
}

/* QRadioButton */

QRadioButton {
  color: {{neutral.neutral12}};
  background: {{neutral.neutral3}};
  spacing: 5px;
}

QRadioButton::indicator {
  width: {{fontSize}}px;
  height: {{fontSize}}px;
  border: 1px solid {{primary.primary7}};
}

QRadioButton::indicator:hover {
  background-color: {{neutral.neutral4}};
  border-color: {{primary.primary8}};
}

QRadioButton::indicator:disabled {
  background-color: transparent;
  border-color: {{neutral.neutral6}};
}

QRadioButton::indicator:checked {
  background-color: {{neutral.neutral5}};
  border-color: {{primary.primary8}};
  image: url("static/qss/resources/check.svg");
}

/* Scroll Bar */

QScrollBar {
  background-color: {{neutral.neutral2}};
}

QScrollBar:vertical {
  width: 9px;
  margin-top: 9px;
  margin-bottom: 9px;
}

QScrollBar::handle:vertical {
  height: 9px;
  margin-left: 9px;
  margin-right: 9px;
}

QScrollBar::handle {
  background-color: {{primary.primary3}};
}

QScrollBar::handle:hover {
  background-color: {{primary.primary4}};
}

QScrollBar::handle:pressed {
  background-color: {{primary.primary5}};
}

QScrollBar::sub-line,
QScrollBar::add-line {
  background-color: {{primary.primary3}};
}
QScrollBar::sub-line:hover,
QScrollBar::add-line:hover  {
  background-color: {{primary.primary4}};
}
QScrollBar::sub-line:pressed,
QScrollBar::add-line:pressed {
  background-color: {{primary.primary5}};
}

QScrollBar::add-line:vertical {
  height: 9px;
  subcontrol-position: bottom;
  subcontrol-origin: margin;
}

QScrollBar::sub-line:vertical {
  height: 9px;
  subcontrol-position: top;
  subcontrol-origin: margin;
}

QScrollBar::add-line:horizontal {
  width: 9px;
  subcontrol-position: right;
  subcontrol-origin: margin;
}

QScrollBar::sub-line:horizontal {
  width: 9px;
  subcontrol-position: left;
  subcontrol-origin: margin;
}

QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical,
QScrollBar::add-page:horizontal,
QScrollBar::sub-page:horizontal {
  background: transparent;
}

/* Number and date box */

QSpinBox,
QDateTimeEdit {
  color: {{primary.primary12}};
  background: {{neutral.neutral3}};
  border: 1px solid {{primary.primary7}};
  placeholder-text-color: {{primary.primary11}};
  selection-background-color: {{primary.primary4}};
  border-radius: 4px;
  padding: 2px 4px 2px 4px;
}

QSpinBox:hover,
QDateTimeEdit:hover {
  background: {{neutral.neutral4}};
  border-color: {{primary.primary8}};
}

QSpinBox:pressed,
QDateTimeEdit:pressed {
  background: {{neutral.neutral5}};
  border-color: {{primary.primary8}};
}

QSpinBox:disabled,
QDateTimeEdit:disabled {
  color: {{neutral.neutral11}};
  background: {{neutral.neutral2}};
  border-color: {{neutral.neutral6}};
}

QSpinBox::up-button,
QDateTimeEdit::up-button,
QSpinBox::down-button,
QDateTimeEdit::down-button {
  background: {{primary.primary3}};
  width: 18px;
  border-color: {{primary.primary7}};
  border-style: solid;
}

QSpinBox::up-button,
QDateTimeEdit::up-button {
  subcontrol-origin: border;
  subcontrol-position: top right;
  border-top-width: 1px;
  border-right-width: 1px;
  border-top-right-radius: 4px;
}

QSpinBox::down-button,
QDateTimeEdit::down-button{
  subcontrol-origin: border;
  subcontrol-position: bottom right;
  border-bottom-width: 1px;
  border-right-width: 1px;
  border-bottom-right-radius: 4px;
}

QSpinBox::up-button:hover,
QDateTimeEdit::up-button:hover,
QSpinBox::down-button:hover,
QDateTimeEdit::down-button:hover {
  background: {{primary.primary4}};
}


QSpinBox::up-button:pressed,
QDateTimeEdit::up-button:pressed,
QSpinBox::down-button:pressed,
QDateTimeEdit::down-button:pressed {
  background: {{primary.primary5}};
}


QSpinBox::up-button:disabled,
QDateTimeEdit::up-button:disabled,
QSpinBox::down-button:disabled,
QDateTimeEdit::down-button:disabled {
  background: {{primary.primary2}};
  border-color: {{neutral.neutral6}};
}

QSpinBox::up-arrow,
QDateTimeEdit::up-arrow {
  image: url("static/qss/resources/chevron-up.svg");
  width: 8px;
  height: 8px;
}

QSpinBox::down-arrow,
QDateTimeEdit::down-arrow {
  image: url("static/qss/resources/chevron-down.svg");
  width: 8px;
  height: 8px;
}

/* Text box */

QLineEdit, QTextEdit, QPlainTextEdit  {
  color: {{neutral.neutral9}};
  background: {{neutral.neutral3}};
  border: 1px solid {{primary.primary7}};
  placeholder-text-color: {{primary.primary11}};
  selection-background-color: {{primary.primary4}};
  border-radius: 2px;
  padding: 2px 4px 2px 4px;
}

QLineEdit:hover, QTextEdit:hover, QPlainTextEdit:hover {
  background: {{neutral.neutral4}};
  border-color: {{primary.primary8}};
}

QLineEdit:pressed, QTextEdit:pressed, QPlainTextEdit:pressed {
  background: {{neutral.neutral5}};
  border-color: {{primary.primary8}};
}

QLineEdit:disabled, QTextEdit:disabled, QPlainTextEdit:disabled {
  color: {{neutral.neutral11}};
  background: transparent;
  border-color: {{neutral.neutral6}};
}

QLineEdit#HydrusValid,
QTextEdit#HydrusValid,
QPlainTextEdit#HydrusValid {
  color: {{green.green12}};
  background: {{green.green3}};
  border-color: {{green.green7}};
}

QLineEdit#HydrusValid:hover,
QTextEdit#HydrusValid:hover,
QPlainTextEdit#HydrusValid:hover {
  background: {{green.green4}};
  border-color: {{green.green8}};
}

QLineEdit#HydrusValid:pressed,
QTextEdit#HydrusValid:pressed,
QPlainTextEdit#HydrusValid:pressed {
  background: {{green.green5}};
  border-color: {{green.green8}};
}

QLineEdit#HydrusIndeterminate,
QTextEdit#HydrusIndeterminate,
QPlainTextEdit#HydrusIndeterminate {
  color: {{primary.primary12}};
  background: {{primary.primary3}};
  border-color: {{primary.primary7}};
}

QLineEdit#HydrusIndeterminate:hover,
QTextEdit#HydrusIndeterminate:hover,
QPlainTextEdit#HydrusIndeterminate:hover {
  background: {{primary.primary4}};
  border-color: {{primary.primary8}};
}

QLineEdit#HydrusIndeterminate:pressed,
QTextEdit#HydrusIndeterminate:pressed,
QPlainTextEdit#HydrusIndeterminate:pressed {
  background: {{primary.primary5}};
  border-color: {{primary.primary8}};
}

QLineEdit#HydrusInvalid,
QTextEdit#HydrusInvalid,
QPlainTextEdit#HydrusInvalid {
  color: {{red.red12}};
  background: {{red.red3}};
  border-color: {{red.red7}};
}

/* Progress bar */

QProgressBar {
  color: {{neutral.neutral1}};
  background: {{neutral.neutral3}};
  text-align: center;
  border-radius: 2px;
}

QProgressBar::chunk {
  color: {{neutral.neutral1}};
  background-color: {{primary.primary9}};
}

/* Tabs */

QTabWidget::pane {
  background: {{neutral.neutral1}};
  border: none;
  padding: 4px;
}

QTabWidget::tab-bar {
  border:none;
  background: transparent;
  left: 4px;
  padding: 0px 4px;
}

QTabBar {
  border: none;
  background: transparent;
}

QTabBar::tab {
  border: 1px solid {{primary.primary7}};
  border-top-left-radius: 2px;
  border-top-right-radius: 2px;
  padding: 4px 6px 4px 6px;
}

QTabBar::tab:!selected {
  background: {{neutral.neutral1}};
  color: {{primary.primary11}};
  font-weight: normal;
}

QTabBar::tab:!selected:hover {
  background: {{neutral.neutral2}};
  border-color: {{primary.primary8}};
}


QTabBar::tab:selected {
  color: {{primary.primary9}};
  border-color: {{primary.primary8}};
  font-weight: bold;
  border-bottom: none;
}

QTabBar::tab:disabled {
  color: {{neutral.neutral11}};
  border-color: {{neutral.neutral6}};
}

QTabBar::tab:pressed {
  border-color: {{primary.primary8}};
}


/* Unique */

/* Labels */

QLabel#HydrusValid {
  color: {{green.green9}};
}

QLabel#HydrusInvalid {
  color: {{red.red9}};
}

QLabel#HydrusIndeterminate {
  color: {{primary.primary12}};
}

QLabel#HydrusWarning {
  background: {{red.red3}};
  color: {{red.red12}};
  border-radius: 2px;
  padding: 2px 4px 2px 4px;
}


/* Tooltips */

QToolTip {
  color: {{neutral.neutral12}};
  background: {{neutral.neutral3}};
  border: 1px solid {{neutral.neutral7}};
  border-radius: 2px;
  padding: 2px 4px 2px 4px;
}

/* Dialogs */

QDialog {
  background: {{neutral.neutral1}};
  border: 1px solid {{neutral.neutral7}};
  border-radius: 2px;
}

/* Locator aka Command Palette */

QLocatorResultWidget#unselectedLocatorResult {
  background: {{neutral.neutral3}};
}

QLocatorResultWidget#selectedLocatorResult {
  background: {{primary.primary4}};
}

